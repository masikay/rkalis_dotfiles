#!/usr/bin/env bash

coloredEcho() {
    local exp="$1";
    local color="$2";
    local arrow="$3";
    if ! [[ $color =~ '^[0-9]$' ]] ; then
       case $(echo $color | tr '[:upper:]' '[:lower:]') in
        black) color=0 ;;
        red) color=1 ;;
        green) color=2 ;;
        yellow) color=3 ;;
        blue) color=4 ;;
        magenta) color=5 ;;
        cyan) color=6 ;;
        white|*) color=7 ;; # white or invalid color
       esac
    fi
    tput bold;
    tput setaf "$color";
    echo "$arrow $exp";
    tput sgr0;
}

OS=$(uname)

if [ "$OS" == "Darwgin" ]; then
    GLOBAL=false

    while getopts ":gh" OPTION "$@" ; do
        case $OPTION in
            g)
                GLOBAL=true
                ;;
            h)
                echo "Usage: ${0##*/} [-g] [-h]"
                exit 0
                ;;
            \?)
                echo "Unknown option: -$OPTARG"
                echo "Usage: ${0##*/} [-g] [-h]"
                exit 1
                ;;
        esac
    done

    if [ "$GLOBAL" == true ]; then
        if [ $(defaults read -g AppleShowAllFiles) = FALSE ]; then
            defaults write -g AppleShowAllFiles TRUE
            defaults write com.apple.finder AppleShowAllFiles TRUE
        else
            defaults write -g AppleShowAllFiles FALSE
            defaults write com.apple.finder AppleShowAllFiles FALSE
        fi
    else
        if [ $(defaults read com.apple.finder AppleShowAllFiles) = FALSE ]; then
            defaults write com.apple.finder AppleShowAllFiles TRUE
        else
            defaults write com.apple.finder AppleShowAllFiles FALSE
        fi
    fi

    killall Finder
else
    coloredEcho "This script only works on macOS systems!!" red "==>"
fi
